<?php
class SelgereController extends AppController {
  function beforeFilter() {
    parent::beforeFilter(); 
    $this->Auth->allowedActions = array('*');
  }

  function index(){
    $this->pageTitle = 'Brukere';
    $this->layout = 'default';
    $paginate = array(
		      'limit' => 25,
		      'order' => array(
				       'Selger.nummer' => 'desc'
				       )
		      );
    $data = $this->paginate('Selger');
    $this->set('data', $data);
  }
  function login(){
  }
  function logout(){
  }
  }
?>
