<?php
class FakturaerController extends AppController {
  function index(){
    $this->pageTitle = 'Fakturaliste';
    $this->layout = 'default';
    $paginate = array(
		      'limit' => 25,
		      'order' => array(
				       'Faktura.nummer' => 'asc'
				       )
		      );
    $data = $this->paginate('Faktura');
    $this->set('data', $data);
  }
  }
?>
