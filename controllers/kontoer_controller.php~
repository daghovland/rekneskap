<?php
class KontoerController extends AppController {

	var $name = 'Kontoer';
	var $helpers = array('Html', 'Form');
	var $components = array('Acl');

	function index() {
		$this->Konto->recursive = 0;
		$this->set('kontoer', $this->paginate());
	}

	function view($id = null) {
		if (!$id) {
			$this->Session->setFlash(__('Invalid Konto.', true));
			$this->redirect(array('action'=>'index'));
		}
		$this->set('konto', $this->Konto->read(null, $id));
	}

	function add() {
		if (!empty($this->data)) {
			$this->Konto->create();
			if ($this->Konto->save($this->data)) {
				$this->Session->setFlash(__('The Konto has been saved', true));
				$this->redirect(array('action'=>'index'));
			} else {
				$this->Session->setFlash(__('The Konto could not be saved. Please, try again.', true));
			}
		}
	}

	function edit($id = null) {
		if (!$id && empty($this->data)) {
			$this->Session->setFlash(__('Invalid Konto', true));
			$this->redirect(array('action'=>'index'));
		}
		if (!empty($this->data)) {
			if ($this->Konto->save($this->data)) {
				$this->Session->setFlash(__('The Konto has been saved', true));
				$this->redirect(array('action'=>'index'));
			} else {
				$this->Session->setFlash(__('The Konto could not be saved. Please, try again.', true));
			}
		}
		if (empty($this->data)) {
			$this->data = $this->Konto->read(null, $id);
		}
	}

	function delete($id = null) {
		if (!$id) {
			$this->Session->setFlash(__('Invalid id for Konto', true));
			$this->redirect(array('action'=>'index'));
		}
		if ($this->Konto->del($id)) {
			$this->Session->setFlash(__('Konto deleted', true));
			$this->redirect(array('action'=>'index'));
		}
	}


	function admin_index() {
		$this->Konto->recursive = 0;
		$this->set('kontoer', $this->paginate());
	}

	function admin_view($id = null) {
		if (!$id) {
			$this->Session->setFlash(__('Invalid Konto.', true));
			$this->redirect(array('action'=>'index'));
		}
		$this->set('konto', $this->Konto->read(null, $id));
	}

	function admin_add() {
		if (!empty($this->data)) {
			$this->Konto->create();
			if ($this->Konto->save($this->data)) {
				$this->Session->setFlash(__('The Konto has been saved', true));
				$this->redirect(array('action'=>'index'));
			} else {
				$this->Session->setFlash(__('The Konto could not be saved. Please, try again.', true));
			}
		}
	}

	function admin_edit($id = null) {
		if (!$id && empty($this->data)) {
			$this->Session->setFlash(__('Invalid Konto', true));
			$this->redirect(array('action'=>'index'));
		}
		if (!empty($this->data)) {
			if ($this->Konto->save($this->data)) {
				$this->Session->setFlash(__('The Konto has been saved', true));
				$this->redirect(array('action'=>'index'));
			} else {
				$this->Session->setFlash(__('The Konto could not be saved. Please, try again.', true));
			}
		}
		if (empty($this->data)) {
			$this->data = $this->Konto->read(null, $id);
		}
	}

	function admin_delete($id = null) {
		if (!$id) {
			$this->Session->setFlash(__('Invalid id for Konto', true));
			$this->redirect(array('action'=>'index'));
		}
		if ($this->Konto->del($id)) {
			$this->Session->setFlash(__('Konto deleted', true));
			$this->redirect(array('action'=>'index'));
		}
	}

}
?>